<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Project 4 - CNT 4714</display-name>

    <!-- Authentication Servlet -->
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>com.project4.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/AuthenticationServlet</url-pattern>
    </servlet-mapping>

    <!-- Root Servlet -->
    <servlet>
        <servlet-name>RootServlet</servlet-name>
        <servlet-class>com.project4.RootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootServlet</servlet-name>
        <url-pattern>/RootServlet</url-pattern>
    </servlet-mapping>

    <!-- Client Servlet -->
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>com.project4.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/ClientServlet</url-pattern>
    </servlet-mapping>

    <!-- Accountant Servlet -->
    <servlet>
        <servlet-name>AccountantServlet</servlet-name>
        <servlet-class>com.project4.AccountantServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountantServlet</servlet-name>
        <url-pattern>/AccountantServlet</url-pattern>
    </servlet-mapping>

    <!-- Test Driver Servlet -->
    <servlet>
        <servlet-name>TestDriverServlet</servlet-name>
        <servlet-class>com.project4.TestDriverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestDriverServlet</servlet-name>
        <url-pattern>/TestDriverServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>authentication.html</welcome-file>
    </welcome-file-list>

</web-app> 